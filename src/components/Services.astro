---
// Props
interface Service {
  title: string;
  description: string;
  price: string;
  imageUrl: string;
  imageAlt: string;
}

interface Props {
  services: Service[];
}

const { services } = Astro.props as Props;
---

<section class="services" style="padding: 40px; text-align: center;">
  <h2>Our Wedding Photography Packages</h2>
  <div class="service-grid" style="display: grid; grid-template-columns: repeat(auto-fit, minmax(350px, 1fr)); gap: 30px; margin-top: 30px;">
    {services.map((service) => (
      <div class="service-item" style="border: 1px solid #ddd; padding: 20px; border-radius: 8px; box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);">
        <img src={service.imageUrl} alt={service.imageAlt} style="width: 100%; height: 200px; object-fit: cover; margin-bottom: 15px; border-radius: 5px;" />
        <h3 style="font-size: 1.5em; margin-bottom: 10px;">{service.title}</h3>
        <p style="margin-bottom: 15px;">{service.description}</p>
        <p style="font-weight: bold; color: #e44d26;">{service.price}</p>
        <a href="/contact" style="background-color: #e44d26; color: white; padding: 10px 20px; text-decoration: none; border-radius: 5px; display: inline-block; margin-top: 10px;">Learn More</a>
      </div>
    ))}
  </div>
</section>

<style>
  /* Add your custom styles here, preferably in a separate CSS file */
  .services {
    /* Example Styles */
  }
</style>